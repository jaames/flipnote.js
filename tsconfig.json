{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "ES2020",
      "dom",
    ],
    "jsx": "react",
    "allowJs": false,
    "types": ["@pyoner/svelte-types", "node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "*" : ["src/types/*"]
    }
  }
}